.container.mt-4
  .row
    .col-md-8.offset-md-2
      .card
        .card-header
          h2.mb-0 New Folder
        .card-body
          = simple_form_for [@project, @folder], url: create_folder_project_materials_path(@project), html: { class: 'form-container' } do |f|
            .form-group.mb-3
              = f.input :title, label: 'Folder Name', input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' }
            .form-group.mb-3
              = f.input :short_description, label: 'Description (optional)', input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' }
            .form-actions.mt-4
              = f.button :submit, 'Create Folder', class: 'btn btn-primary'
              = link_to 'Cancel', project_materials_path(@project, folder_id: @current_folder&.id), class: 'btn btn-secondary ml-2'