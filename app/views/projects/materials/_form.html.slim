= simple_form_for [@project, @material], html: { class: 'form-container' } do |f|
  .form-group.mb-3
    = f.input :title, label: 'Material Title', input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' }
  .form-group.mb-3
    = f.input :short_description, label: 'Short Description', input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' }
  .form-group.mb-3
    = f.input :file, label: 'Upload File', input_html: { class: 'form-control-file' }, wrapper_html: { class: 'mb-3' }
  .form-actions.mt-4
    = f.button :submit, class: 'btn btn-primary'
    = link_to 'Cancel', project_materials_path(@project), class: 'btn btn-secondary ml-2'