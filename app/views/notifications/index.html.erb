<section class="bg--secondary">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1>Notifications</h1>
        </div>

        <div class="card card-body">
          <% if @notifications.any? %>
            <ul class="list-unstyled">
              <% @notifications.each do |notification| %>
                <li class="p-3 mb-2 border-bottom <%= 'bg-light' unless notification.read? %>">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <p class="mb-1 <%= 'font-weight-bold' unless notification.read? %>">
                        <%= notification.message %>
                      </p>
                      <small class="text-muted">
                        <%= time_ago_in_words(notification.created_at) %> ago
                      </small>
                    </div>
                    <% unless notification.read? %>
                      <%= button_to "Mark as read", notification_path(notification), method: :patch, class: "btn btn-sm btn-outline-primary" %>
                    <% end %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-center py-4">No new notifications</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
